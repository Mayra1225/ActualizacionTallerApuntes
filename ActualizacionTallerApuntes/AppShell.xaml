<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="ActualizacionTallerApuntes.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:ActualizacionTallerApuntes.Views"
    Shell.FlyoutBehavior="Disabled"
    Title="ActualizacionTallerApuntes">

    <TabBar>
        <ShellContent Title="Notas" ContentTemplate="{DataTemplate local:NotesPage}" Route="NotesPage"/>
        <ShellContent Title="Recordatorios" ContentTemplate="{DataTemplate local:RecordatoriosPage}" Route="RecordatoriosPage"/>
        <ShellContent Title="Clima" ContentTemplate="{DataTemplate local:ClimaPage}" Route="ClimaPage"/>
        <ShellContent Title="About" ContentTemplate="{DataTemplate local:AboutPage}" Route="AboutPage"/>
    </TabBar>

</Shell>
